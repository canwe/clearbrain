<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd">

	<!-- Front website -->
	<group name="front">
		<group-ref>common</group-ref>
		<group-ref>nivoslider</group-ref>
		<css>/css/front/core.less</css>
		<css>/css/front/header.less</css>
		<css>/css/front/account-deleted.less</css>
		<css>/css/front/login.less</css>
		<css>/css/front/signup.less</css>
		<css>/css/front/welcome.less</css>
		<css>/css/front/footer.less</css>
		<js>/js/front.js</js>
	</group>

	<!-- Logged website -->
	<group name="logged">
		<group-ref>common</group-ref>
		<css>/css/logged.css</css>
		<js>/js/jquery/clearfield/clearfield-1.1.min.js</js>
		<js>/js/logged/menu.js</js>
		<css>/css/jquery/cleditor.css</css>
		<group-ref>jqueryui</group-ref>
	</group>
	<group name="dashboard">
		<js>/js/logged/dashboard.js</js>
		<js>/js/logged/todo.js</js>
	</group>
	<group name="help">
		<js>/js/logged/help.js</js>
	</group>
	<group name="note-en">
		<js>/js/logged/note.js</js>
	</group>
	<group name="note-cn">
		<js>/js/logged/note.js</js>
		<js>/js/jquery/ui/jquery-ui.datepicker-cn.js</js>
	</group>
	<group name="note-fr">
		<js>/js/logged/note.js</js>
		<js>/js/jquery/ui/jquery-ui.datepicker-fr.js</js>
	</group>
	<group name="quick-memo">
		<js>/js/logged/quick-memo.js</js>
		<js>/js/jquery/cleditor/cleditor-1.3.0.min.js</js>
	</group>
	<group name="search">
		<js>/js/logged/todo.js</js>
	</group>
	<group name="settings">
		<js>/js/logged/settings.js</js>
	</group>
	<group name="statistics">
		<js>/js/jquery/highcharts/highcharts-2.1.6.js</js>
		<js>/js/jquery/highcharts/exporting.js</js>
		<js>/js/logged/statistics.js</js>
	</group>

	<!-- For both front and logged websites -->
	<group name="common">
		<js>/js/jquery/jquery-1.6.3.min.js</js>
		<js>/js/core.js</js>
		<css>/css/blueprint/screen.css</css>
		<css>/css/blueprint/plugins/fancy-type/screen.css</css>
		<css>/css/blueprint/plugins/buttons/screen.css</css>
	</group>

	<!-- JQuery UI -->
	<group name="jqueryui">
		<js>/js/jquery/ui/jquery-ui-1.8.16.custom.min.js</js>
		<css>/css/jquery/jquery-ui.css</css>
	</group>

	<!-- Nivo slider -->
	<group name="nivoslider">
		<css>/css/jquery/nivo-slider.css</css>
		<css>/css/jquery/nivo-slider-theme.css</css>
		<js>/js/jquery/nivo_slider/nivo_slider-2.6.min.js</js>
	</group>
</groups>
