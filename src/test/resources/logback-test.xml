<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-5p %c - %m%n</pattern>
		</encoder>
	</appender>

	<logger name="org.hibernate.SQL" level="WARN" /> <!-- DEBUG to show SQL -->
	<logger name="com.nilhcem" level="WARN" />

	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
